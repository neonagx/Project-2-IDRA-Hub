<%= render "header" %>

<ul>
  <% @products.each do |product| %>
  <li>Product Name: <%= product.name %></li>
  <li>Price: $<%= product.price %></li>
  <li>
    <% if product.user == current_user %>
      This is Your Product
    <% else %>
      Posted by: <%= product.user.name %> <%= link_to "Go to Droner's Profile", user_path(product.user) %>
    <% end %>
  </li>
  <li>Buying or Selling? <%= product.for_sale %></li>
  <li>Date Created: <%= product.created_at %></li>
  <li>Date Updated: <%= product.updated_at %></li>
  <li><%= link_to "Details", product %></li><br>
  <% end %>
</ul>
