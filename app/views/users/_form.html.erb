<%= form_for @user do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>

  <div>
    <%= f.label :gender %><br>
    <%= f.select :gender, options_for_select([["Select One", ""], "Male", "Female"]) %>
  </div>

  <div>
    <%= f.label :date_of_birth %><br>
    <%= f.date_field :date_of_birth %>
  </div>

  <div style="width:25%">
    <%= f.label :profile_image %>
    <%= f.file_field :image, class: 'btn btn-info' %>
  </div>

  <div>
    <%= f.submit %>
  </div>
  
<% end %>
