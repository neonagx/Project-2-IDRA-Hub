<%= render 'header' %>

<%= render 'menu' %>

<div class="row">
  <div class="col-lg-5 col-lg-4">
    <div class="thumbnail-responsive">
      <%= image_tag @user.image.url(:large) %>
      <div class="caption">
          <h3>Username is: <%= @user.username %></h3>
          <h3>Email: <%= @user.email %></h3>
          <h3>Phone Number: <%= @user.phone %></h3>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Delete Your Account', user_path(@user), method: :delete, class: "btn btn-danger", data: {confirm: "Are you Sure?"} if current_user.admin %>
