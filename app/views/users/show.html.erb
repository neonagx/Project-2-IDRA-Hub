<%= render 'header' %>

<h1>Welcome <%= current_user.name if current_user %></h1>
  <div>
    <%= link_to 'Edit Your Profile', edit_user_path %>
  </div>
  <div>
    <%= link_to 'Log Out', logout_path, method: :delete %>
  </div>
    <ul>

      <li>Your name is: <%= current_user.name %></li>
      <li>Your gender is: <% if current_user.gender%> Male <% else %> Female <% end %></li>
      <li>Your Birthday is: <%= current_user.date_of_birth %></li>
      <li>Your email: <%= current_user.email %></li>

    </ul>
